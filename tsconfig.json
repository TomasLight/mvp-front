{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "watch": false,

        "baseUrl": "./src/",
        "paths": {
            "@app/*": ["app/*"],
            "@CommonState": ["app/config/redux/CommonState.ts"],
            "@config/*": ["app/config/*"],
            "@data": ["data/index.ts"],
            "@enums": ["enums/index.ts"],
            "@icons": ["shared/atoms/icons/index.ts"],
            "@shared/*": ["shared/*"],

            "@admin/*": ["app/admin/*"],
            "@AdminState": ["app/admin/config/redux/State.ts"],

            "@ws/*": ["app/workspace/*"],
            "@WsState": ["app/workspace/config/redux/State.ts"],

            "@api": ["api/index.ts"],
            "@api/*": ["api/*"],

            "@models": ["app/models/index.ts"],
            "@models/*": ["app/models/*"],

            "@select": ["shared/organisms/Fields/Select/index.ts"],
            "@select/*": ["shared/organisms/Fields/Select/*"],

            "@utils": ["utils/index.ts"],
            "@utils/*": ["utils/*"]
        },
        "plugins": [{ "name": "typescript-tslint-plugin" }]
    },
    "include": ["**/*.tsx", "**/*.ts"],
    "exclude": [
        "node_modules",
        "public",
        "scripts",
        "webpack"
    ]
}
