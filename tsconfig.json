{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "watch": false,

        "baseUrl": "./src/",
        "paths": {
            "@main/*": ["app/main/*"],
            "@MainState": ["app/main/config/redux/State.ts"],

            "@pos/*": ["app/pos/*"],
            "@PosState": ["app/pos/config/redux/State.ts"],

            "@ws/*": ["app/workspace/*"],


            "@api": ["api/index.ts"],
            "@api/*": ["api/*"],

            "@config": ["config/index.ts"],
            "@enums/*": ["enums/*"],
            "@selectors/*": ["utils/redux/selectors/*"],
            "@shared/*": ["shared/*"],
            "@icons": ["shared/atoms/icons/index.ts"],
            "@utils/*": ["utils/*"]
        },
        "plugins": [{ "name": "typescript-tslint-plugin" }]
    },
    "include": ["**/*.tsx", "**/*.ts"],
    "exclude": [
        "node_modules",
        "public",
        "scripts",
        "webpack"
    ]
}
